<% include ../partials/header %>

<div class="container">
        <form id="resetForm" action="/reset/<%= token %>" method="POST">
            <div class="form-group">
                <label for="confirmPassword">New Password</label>
                <div class="input-group">
                    <input type="password" class="form-control" id="newPassword" name="newPassword" data-toggle="password" aria-describedby="new password entry field" required>
                    <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="fa fa-eye"></i>
                    </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <div class="input-group">
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" data-toggle="password" aria-describedby="new password confirmation entry field" required>
                    <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="fa fa-eye"></i>
                    </span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Update Password</button>
        </form>
</div>

<script src="/javascript/bootstrap-show-password.js"></script>

<% include ../partials/footer %>