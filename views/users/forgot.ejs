<% include ../partials/header %>
<div class="container">
    <div id="forgotForm">
        <form action="/forgot" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="" aria-describedby="email input box">
                <small id="email input box" class="text-muted">Enter your email above and we'll send you a link to reset your password</small>
            </div>
            <div class="form-group">
                <input type="submit" name="" id="" class="btn btn-primary" value="Reset Password" aria-describedby="button to reset password">
            </div>
        </form>
    </div>
</div>


<% include ../partials/footer %>