<% include partials/header %>

<div class="container">
    <div id="formDiv">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="loginFormEmail">Email</label>
                <input type="email" class="form-control" id="loginFormEmail" name="email" aria-describedby="emailHelp" placeholder="joe@schmoe.com" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="loginFormPassword">Password</label>
                <input type="password" class="form-control" id="loginFormPassword" name="password" placeholder="Password" required>
                <input type="checkbox" onclick="showPassword()">Show Password
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<% include partials/footer %>