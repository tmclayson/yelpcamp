<% include partials/header %>

<div class="container">
    <div id="formDiv">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="loginFormEmail">Email</label>
                <input type="email" class="form-control" id="loginFormEmail" name="email" aria-describedby="emailHelp" placeholder="joe@schmoe.com" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-group">
                    <input type="password" class="form-control" id="password" name="password" data-toggle="password" required>
                    <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="fa fa-eye"></i>
                    </span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<script src="/javascript/bootstrap-show-password.js"></script>

<% include partials/footer %>