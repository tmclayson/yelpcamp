<% include ../partials/header %>

<div class="container">

        <h1>Edit <%= campground.name %> </h1>

        <div id="formDiv">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" id="campNameInput" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" id="campNameInput" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" id="urlInput" type="text" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <textarea rows="4" class="form-control" id="descriptionInput" type="text" name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div id="formButtonGroup">
                    <a href="/campgrounds/<%= campground._id %>" method="get" class="btn btn-danger">Cancel</a>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Confirm Changes</button>
                    </div>
                </div>

            </form>
        </div>
</div>

<% include ../partials/footer %>