<% include ../partials/header %>

<div class="container">

        <h1>Create a New Campground</h1>

        <div id="formDiv">
            <form action='/campgrounds' method='POST'>
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Ye olde campsite...">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" min="0.01" step="0.01" placeholder="price/night">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="Yosemite...">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="http://...">
                </div>
                <div class="form-group">
                    <textarea rows="4" class="form-control" type="text" name="description" placeholder="This campsite changed my life..."></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>

            <a href="/campgrounds">Go back</a>
        </div>
</div>

<% include ../partials/footer %>