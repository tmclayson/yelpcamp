<% include ../partials/header %>

<div class="container">

        <h1>Create a New Campground</h1>

        <div id="formDiv">
            <form action='/campgrounds' method='POST'>
                <div class="form-group">
                    <input class="form-control" id="campNameInput" type="text" name="name" placeholder="Enter the name of the camp">
                </div>
                <div class="form-group">
                    <input class="form-control" id="campNameInput" type="number" name="price" min="0.01" step="0.01" placeholder="Enter the nightly cost of staying at this camp">
                </div>
                <div class="form-group">
                    <input class="form-control" id="urlInput" type="text" name="image" placeholder="Enter a url of an image of the camp">
                </div>
                <div class="form-group">
                    <textarea rows="4" class="form-control" id="descriptionInput" type="text" name="description" placeholder="Enter a description of the camp"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>

            <a href="/campgrounds">Go back</a>
        </div>
</div>

<% include ../partials/footer %>