<% include partials/header %>

<div class="container">
    <div id="formDiv">
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="registrationFormEmail">Email</label>
                <input type="email" class="form-control" id="registrationFormEmail" name="email" placeholder="name@example.com" required>
            </div>
            <div class="form-group">
                <label for="registrationFormPassword">Password</label>
                <input type="password" class="form-control" id="registrationFormPassword" name="password" placeholder="something unique!" required>
            </div>
            <div class="form-row">
                <div class="col form-group">
                    <label for="registrationFormFirstName">First Name</label>
                    <input type="text" class="form-control" id="registrationFormFirstName" name="firstName" placeholder="First name">
                </div>
                <div class="col form-group">
                    <label for="registrationFormLastName">Last Name</label>
                    <input type="text" class="form-control" id="registrationFormLastName" name="lastName" placeholder="Last name">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Register</button>
            </div>
        </form>
    </div>
</div>

<% include partials/footer %>