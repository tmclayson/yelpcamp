<% include ../partials/header %>

<div class="container">

        <h1>Edit Comment</h1>

        <div id="formDiv">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea rows="4" class="form-control" id="commentInput" type="text" name="updatedComment[text]"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>

            <a href="/campgrounds/<%= campground_id %>">Go back</a>
        </div>
</div>

<% include ../partials/footer %>